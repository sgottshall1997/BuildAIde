# =============================================================================
# BuildAIde Environment Configuration
# =============================================================================
# This file contains environment variables for BuildAIde development
# Copy this file and update the values for your development environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Demo Mode - Set to true to enable demo mode with mock data
VITE_DEMO_MODE=false

# Release Mode - Set to true to hide unfinished features in production
VITE_RELEASE_MODE=false

# Development Mode - Set to true for development environment
NODE_ENV=development

# Port Configuration
PORT=5000

# =============================================================================
# AI INTEGRATION - OPENAI
# =============================================================================

# OpenAI API Key - Required for all AI-powered features
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-Uepumdou1wIQpZw2jgVVv0Qvmmp0SV5F12\CaTLPvAWUSeN\_VYdgSXtgfufr5MlI\_d6FkbffciT3BlbkFJEqwc1RIL7T1\_gYWO7e31gC5nzi\_widepjrZ\-CirCtEpg6nm8Q8YcWZwN-VUpvYlCkZR-F\_ckA

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL - Required for data persistence
# Format: postgresql://username:password@host:port/database
# For Neon: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgres://postgres:12345678@localhost:5432/build_ai?schema=public

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================

# Session Secret - Change this to a random string for security
SESSION_SECRET=your-session-secret-key-here

# Session Configuration
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Waitlist Integration (Typeform or similar)
VITE_WAITLIST_URL=https://your-typeform-url-here

# Email Service (for notifications, password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here

# =============================================================================
# API RATE LIMITING
# =============================================================================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Upload directory
UPLOAD_DIR=uploads

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,https://your-domain.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log format (json, simple)
LOG_FORMAT=simple

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature flags to enable/disable specific functionality
FEATURE_ADVANCED_ESTIMATOR=true
FEATURE_AI_ASSISTANT=true
FEATURE_MATERIAL_PRICES=true
FEATURE_SCHEDULE_BUILDER=true
FEATURE_BID_GENERATOR=true
FEATURE_EXPENSE_TRACKER=true
FEATURE_PERMIT_RESEARCH=true
FEATURE_SUBCONTRACTOR_TRACKER=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for authentication tokens
JWT_SECRET=your-jwt-secret-here

# JWT Token Expiration
JWT_EXPIRES_IN=24h

# Password hashing rounds
BCRYPT_ROUNDS=12

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Weather API (for project planning)
WEATHER_API_KEY=your-weather-api-key-here

# Material pricing API
MATERIAL_PRICING_API_KEY=your-material-pricing-api-key-here

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable/disable development tools
VITE_DEV_TOOLS=true

# API debugging
API_DEBUG=false

# Database query logging
DB_QUERY_LOG=false

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Error tracking (Sentry, etc.)
SENTRY_DSN=your-sentry-dsn-here

# Analytics tracking
ANALYTICS_ID=your-analytics-id-here

# Performance monitoring
PERFORMANCE_MONITORING=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Base URL for the application
BASE_URL=http://localhost:5000

# Static files serving
SERVE_STATIC=true

# Asset optimization
OPTIMIZE_ASSETS=false

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Database backup configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=The application is currently under maintenance. Please try again later.